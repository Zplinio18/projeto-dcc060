{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "outDir": "dist",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "allowJs": false,
        "noEmit": true,
        "allowImportingTsExtensions": true,
    },
    "include": [
        "src/**/*.ts"
    ]
}